// start marquee section
atlantis:webstash(type="css")
  style.
    .marquee-base-left {width:100%;min-width:1000px;height:400px;cursor:pointer;color: #fff;}
    .left-column {float:left;width:500px;padding-top:80px;}
    .right-column {float:left;width:325px;height:320px;padding-top:80px;text-align:center;margin-left:90px;color:#000;}
    .headline { line-height: 0.9; font-family: 'Walsheim-Black'; font-size: 48px;margin:10px 0;}
    .headline .line:nth-child(odd) { font-family: Tungsten, 'Tungsten A', 'Tungsten B', 'Helvetica Neue', Helvetica, Arial;}
    .headline .line:nth-child(even) { font-family: 'Walsheim-Black'; }
    .btn-cta { width: 100%; box-sizing: border-box; margin: 10px 0;}
    .bigtext { visibility:hidden;}
    .additional-info { font-size: 14px;margin: 10px 0;text-align: left; margin: 10px 0;}
    .restrictions { margin: 10px 0;text-align: left;font-size: 12px; margin: 10px 0;}
    .inline-dash{ display:inline-block;overflow:hidden;letter-spacing:-0.5em;font-size:1.4em;vertical-align:top;line-height:50%;}
  if customCSS
    style!= customCSS
div.marquee.marquee-base-left.js-gdhpclick(id=elementId,data-url!=ctaLink)
  div.container.l-main-container
    div.left-column
      div.headline!= headline
    div.right-column
      div.headline!= subHeadline
      span.btn.btn-warning.btn-lg.btn-cta!= ctaText
      if additionalInfo
        div.additional-info!= additionalInfo
      if restrictions
        div.restrictions(data-toggle="tooltip", title=restrictionsTooltip)!= restrictions
atlantis:webstash(type="js")
  script(src!="[@T[link:<javascriptroot />]@T]fos/hp/rebrand/js/bigtext.min.js")
script(type='text/javascript').
  $(window).load(function () {
    $('.bigtext').bigtext().css('visibility', 'visible');
  });
// end marquee section