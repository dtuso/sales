extends _p4p.jade

append vars
  - page.title = "[@L[cds.sales/getonline:pro-design-page-title]@L]";
  - page.description = "[@L[cds.sales/getonline:pro-design-meta-description]@L]";
  - page.keywords = "[@L[cds.sales/getonline:pro-design-meta-keywords]@L]"; 
  - page.canonical = "[@T[link:<relative parammode='explicit' path='~/getonline/getonline.aspx' />]@T]";

  - page.openGraph = page.openGraph || {};
  - page.openGraph.title = "[@L[cds.sales/getonline:pro-design-og-title]@L]";
  - page.openGraph.description = "[@L[cds.sales/getonline:pro-design-og-description]@L]";
  - page.openGraph.image = "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/og_got_1200x630.jpg";

  - page.links = page.links || {};
  - page.links.canonical = "[@T[link:<relative parammode='explicit' />]@T]";
  - page.links.favicon = "[@T[link:<imageroot />]@T]assets/godaddy.ico";

