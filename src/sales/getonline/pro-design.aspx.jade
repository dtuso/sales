  script.
    $(document).ready(function(){
         $('#external').click(function(){
            openPopUpWithParams("http://www.ourdesignexamples.com", "customweb_popup", "left=50,top=50,resizable=yes,scrollbars=yes,width=1000,height=950");
         });
