              input(type="hidden", name="cicode", value="96311")
              input(type="hidden", name="prog_id", value="GoDaddy")
              button.btn.btn-purchase.btn-lg [@L[cds.sales/getonline:get-it-now]@L]
              p.p2 [@L[cds.sales/getonline:pro-design-product-call-us]@L]

