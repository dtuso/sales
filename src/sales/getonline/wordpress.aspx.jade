extends _p4p.jade

append vars
  - productToDisplay = productToDisplay || {};
  - productToDisplay.name = "Managed Wordpress";
  - productToDisplay.landingPage = "wordpress.aspx"
  - productToDisplay.packageId = "getonline_wordpress";
  - productToDisplay.itcCode = "slp_getonline_wordpress";
  - productToDisplay.pricing.promo_monthly = "[@T[multipleproductprice:<current productidlist='464069|101|32759' period='monthly' promocode='75315678' />]@T]";
  - productToDisplay.pricing.promo_annual = "[@T[multipleproductprice:<current productidlist='464069|101|32759' period='yearly' promocode='75315678' />]@T]";
  - productToDisplay.pricing.renewal_annual = "[@T[multipleproductprice:<list productidlist='464069|101|32759' period='yearly'></list>]@T]";
  - productToDisplay.getItNowDescription = "Start a blog with WordPress and let us manage the technical stuff.";
  - productToDisplay.imgClass = "features-wordpress";
  - productToDisplay.productIconClass = "features-wordpress";
  - productToDisplay.productDescription = "We’ll handle all the technical stuff like server setup, security and backups, while you build your blog with the world’s most popular website creation tool.";
  - productToDisplay.productVideoImage = "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-wordpress-laptop.png";
  - productToDisplay.productYouTubeId = "";
  - productToDisplay.productVideoInfoText = "";
  - productToDisplay.productInfoText = "WordPress makes it easy to create, manage and publish your website or blog – all from your web browser. Make changes across your entire site at once, instead of a page at a time. Even add advanced features by simply installing one of 1000s of free plugins.";
  - productToDisplay.productDidYouKnowText = "As open source software, WordPress allows developers to create their own plugins that you can install to add new features to your site?";

block targetedProduct
  .column.website
    img.img-responsive.center-block(src!="[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-features-wordPress.png")
    h3.text-center Managed Wordpress
    p Start a blog with WordPress and let us manage the technical stuff.

block productViewTemplates

block productVideo

block productInfo
  style.
    .wordpress-laptop{height:195px;margin-top:38px;background: url([@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-wordpress-laptop.png) no-repeat center bottom;}
    .wordpress-arrows{height:39px;margin-top:10px;background: url([@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-wordpress-arrows.png) no-repeat center bottom;}
    .wordpress-browser{height:233px;background: url([@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-wordpress-browser.png) no-repeat center bottom;}
    .product-info-text{margin-top:20px;margin-bottom:85px;}

  section#productInfo
    .container(style={'margin-top':'60px'})
      .col-sm-4
        .wordpress-laptop
        h5.uppercase.text-center(style={'margin-top':'10px'}) enter your blog post
      .col-sm-4
        h5.uppercase.text-center(style={'margin-top':'100px'}) publish
        .wordpress-arrows
      .col-sm-4
        .wordpress-browser
        h5.uppercase.text-center(style={'margin-top':'10px'}) <mark>domainName.org</mark>
    .container
      .col-sm-12.product-info-text #{productToDisplay.productInfoText}

