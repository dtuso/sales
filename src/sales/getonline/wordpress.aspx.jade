extends _p4p.jade

append vars
  - page.title = "[@L[cds.sales/getonline:mwp-page-title]@L]";
  - page.description = "[@L[cds.sales/getonline:mwp-meta-description]@L]";
  - page.keywords = "[@L[cds.sales/getonline:mwp-meta-keywords]@L]"; 
  - page.canonical = "[@T[link:<relative parammode='explicit' path='~/getonline/getonline.aspx' />]@T]";

  - page.openGraph = page.openGraph || {};
  - page.openGraph.title = "[@L[cds.sales/getonline:mwp-og-title]@L]";
  - page.openGraph.description = "[@L[cds.sales/getonline:mwp-og-description]@L]";
  - page.openGraph.image = "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/og_got_1200x630.jpg";

  - page.links = page.links || {};
  - page.links.canonical = "[@T[link:<relative parammode='explicit' />]@T]";
  - page.links.favicon = "[@T[link:<imageroot />]@T]assets/godaddy.ico";

  - productToDisplay = productToDisplay || {};
  - productToDisplay.name = "[@L[cds.sales/getonline:mwp-product-name]@L]";
  - productToDisplay.landingPage = "getonline/wordpress.aspx"
  - productToDisplay.packageId = "getonline_wordpress";
  - productToDisplay.itcCode = "p4p_getonline_wordpress";
  - productToDisplay.appKey = "getonline_wordpress";
  - productToDisplay.pricing.promo_monthly = "[@T[multipleproductprice:<current productidlist='464069|101|32759' period='monthly' promocode='511092015' />]@T]";
  - productToDisplay.pricing.promo_annual = "[@T[multipleproductprice:<current productidlist='464069|101|32759' period='yearly' promocode='511092015' />]@T]";
  - productToDisplay.pricing.renewal_annual = "[@T[multipleproductprice:<list productidlist='464069|101|32759' period='yearly'></list>]@T]";
  - productToDisplay.getItNowDescription = "[@L[cds.sales/getonline:mwp-product-get-it-now-description]@L]";
  - productToDisplay.productImgUrl = "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-features-wordPress.png";
  - productToDisplay.productIconUrl = "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-features-wordPress.png";
  - productToDisplay.productDescription = "[@L[cds.sales/getonline:mwp-product-description]@L]";
  - productToDisplay.productInfoImageUrl = "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-wordpress-laptop.png";
  - productToDisplay.productYouTubeId = "";
  - productToDisplay.productVideoInfoText = "";
  - productToDisplay.productInfoText = "[@L[cds.sales/getonline:mwp-product-info-text]@L]";
  - productToDisplay.productDidYouKnowText = "[@L[cds.sales/getonline:mwp-product-did-you-know-text]@L]";
  - productToDisplay.topButtonCI = "96305";
  - productToDisplay.bottomButtonCI = "96304";
  - productToDisplay.bottomSearchCI = "96301";

block targetedProduct
  .column.website
    img.img-responsive.center-block(src!="#{productToDisplay.productImgUrl}")
    h3.text-center #{productToDisplay.name}
    p #{productToDisplay.getItNowDescription}

block productSection
  style.
    .wordpress-laptop{height:195px;margin-top:38px;background: url([@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-wordpress-laptop.png) no-repeat center bottom;}
    .wordpress-arrows{height:39px;margin-top:10px;background: url([@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-wordpress-arrows.png) no-repeat center bottom;}
    .wordpress-browser{height:233px;background: url([@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-wordpress-browser.png) no-repeat center bottom;}
    .product-info-text{margin-top:20px;margin-bottom:85px;}

  section#wordpress.product-section
    .container
      .row
        .col-sm-10.col-sm-offset-1
          img.img-responsive.center-block(src!="#{productToDisplay.productIconUrl}")
          h2.text-center #{productToDisplay.name}
          h4.text-center #{productToDisplay.productDescription}
      .row
        .col-sm-4
          .wordpress-laptop
          h5.uppercase.text-center(style={'margin-top':'10px'}) [@L[cds.sales/getonline:mwp-product-info-enter-blog]@L]
        .col-sm-4
          h5.uppercase.text-center(style={'margin-top':'100px'}) [@L[cds.sales/getonline:mwp-product-info-publish]@L]
          .wordpress-arrows
        .col-sm-4
          .wordpress-browser
          h5.uppercase.text-center(style={'margin-top':'10px'}) <mark><span class="selected-domain-name-display"></span></mark>
      .row
        .col-sm-10.col-sm-offset-1(style={'margin-top':'25px'})
          p.text-center #{productToDisplay.productInfoText}
      .row.bubble-row
        .col-xs-2
          img.hero-guy(src="https://img1.wsimg-com.ide/fos/sales/themes/montezuma/getonline/img/img-hero-guy.png")
        .col-xs-10.col-sm-8.col-lg-6.bubble
          mark.uppercase [@L[cds.sales/getonline:did-you-know]@L]
          p #{productToDisplay.productDidYouKnowText}

block bottomTargetedProduct
  .column.website
    img.img-responsive.center-block(src!="#{productToDisplay.productImgUrl}")
    h3 #{productToDisplay.name}
