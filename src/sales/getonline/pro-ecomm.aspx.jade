extends _p4p.jade

append vars
  - productToDisplay.productVideoImage = "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-onlinestore-monitor.png";

append pageStyles
  style.  
    #pro-specific h2 { margin-bottom: 0; }
    #pro-specific h3 { margin-bottom: 20px; }
    .feature mark { margin-top: 20px; }
    .feature h3 { margin-top: 0; }
    @media (min-width: 768px) {
      .feature { text-align: left; }
    }
    .product-section{border-bottom: lightgray 1px solid;}
    .products{margin-top: 0px!important;}
    .uppercase{text-transform: uppercase;}

block bubbleContent
  h2.text-center Here you go...
  h3.text-center An ecommerce design service for <mark class="business-name-display"></mark> – Starting at <mark id="product-price">[@T[productprice:<current productid='1023' dropdecimal='false' period='monthly' htmlsymbol='false' negative='parentheses'/>]@T]/mo*</mark>

block productContent
  .row(style={"margin-top": "35px"})
    .col-xs-4.col-sm-3.col-sm-offset-3
      img.img-responsive.center-block.computer(src!="[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-prof-svcs-ecomm.png")
    .col-xs-8.col-sm-6.products.text-center
      h3 Ecommerce Design Services
      p Our Professional Web Services team will work with you to build a complete online store your customers will love.
      form(action!="[@T[link:<relative path='~/CDS/Widgets/WidgetsPostHandlers/WebStoreDesignPostHandler.ashx' />]@T]", name="frmWebDesign", id="addtocart-form", method="post")
          input(type="hidden", name="product", value="1023|1|1")
          input(type="hidden", name="selectedPlan", id="selectedPlan", class="selectedPlan", value="frmWebDesign_0")
          input(type="hidden", name="formSubmitButton", id="formSubmitButton", value="Add-to-Cart")
          input(type="hidden", name="itc", value="slp_webdesign2")
          input(type="hidden", name="nocos", value="False")
          input(type="hidden", name="config", value="customsite")
          input(type="hidden", name="sdc", value="True")
          input(type="hidden", name="newxs", value="False")
          input(type="hidden", name="cicode", value="96315")
          input(type="hidden", name="prog_id", value="GoDaddy")
          button.btn.btn-purchase.btn-lg GET IT NOW
          p.p2 or Give us a call <span class = "orange-text">(480) 366-3344</span>

block domainOrPro
  section#pro-specific.bg-primary-o.product-section
    .container
      .row
        .col-xs-12.col-sm-8.col-sm-offset-2.text-center
          h2 We'll Build a Website That Will Help You Build Your Business
      .row
        .col-xs-12.text-center
          h3 Just complete the online interview and our web pros will do the rest. Here’s how it works… 
      .row
        .col-sm-4
          .feature.why-gd-world-leader
            +lazyImg('','','[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/ProShare.png','Clipboard')
            mark.uppercase Step One
            h3 Share Your Vision
            p Give us the basics on your business, brand and products and then choose a professionally designed, industry-specific template that fits your style.
        .col-sm-4
          .feature.why-gd-support.text-center
            +lazyImg('','','[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/ProWork.png','Design')          
            mark.uppercase Step Two
            h3 We Go To Work
            p Based on the info you provided, our expert designers create your unique website, adding text, images and SEO (Search Engine Optimization) tags. The best part? Your site is up in days, not weeks or months.
        .col-sm-4
          .feature.why-gd-trust.text-center
            +lazyImg('','','[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/ProExpand.png','Tools')
            mark.uppercase Step Three
            h3 Enhance and Expand
            p Whenever you need to update the text or change an image on your site, just contact us. Each plan includes six hours of updates per year to keep your site fresh and current.
      .row.bubble-row
        .col-xs-10.col-sm-8.col-sm-offset-2.col-lg-6.col-lg-offset-4.bubble.white
          mark Did you know...
          p We have more than 60 people in our Professional Web Services department, all working to make sure you look awesome online.
        .col-xs-2
          img.hero-guy.left(src="https://img1.wsimg-com.ide/fos/sales/themes/montezuma/getonline/img/img-hero-guy.png")

block productSection
  section#eccom.product-section
    .container
      .row
        .col-sm-10.col-sm-offset-1
          img.img-responsive.center-block(src!="[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-features-onlineStore.png")
          h2.text-center See what we can do
          h3.text-center Here are just a few of the sites we’ve built. <mark class="business-name-display"></mark> could be next…
          button#external.btn.btn-default-dark.center-block View Our Portfolio
      section.video-marquee-wrapper(data-youtube-id="#{productToDisplay.productYouTubeId}")
        .container
          div(data-lazyload-source!="#{productToDisplay.productVideoImage}", data-ci="xxxxxx", class="lazyload video-marquee video-marquee-black full-video monitor")
          .row
            .col-sm-4
            div(data-lazyload-source!="[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/getonline/img/img-monitor-base.png", class="lazyload monitor-base col-sm-4")  
      .row.bubble-row
        .col-xs-2
          img.hero-guy(src="https://img1.wsimg-com.ide/fos/sales/themes/montezuma/getonline/img/img-hero-guy.png")
        .col-xs-10.col-sm-8.col-lg-6.bubble
          mark Did you know...
          p Over the years, our Professional Design Services department has built over 23,000 websites for customers just like you. We know how to create a site you’ll love.

