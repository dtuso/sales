include _domain-starting-at-mixin.jade
mixin renderGoodNews(productToDisplay)
  append pageStyles
    // atlantis:webstash(type="css")
    style.
      .container .hero-guy{height:709px; background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-hero-guy.png) no-repeat center bottom; position: relative; background-size: 100%;}
      .container .good-news-shape{height:331px; background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-goodNews-shape.png) no-repeat center bottom; margin-top: -84px; background-size:95%; margin-bottom: 45px;}
      .container .row .topSpacing{padding-top:20px;}
      .container .row .leftSpacing{padding-left:50px;}
      .container .row .green-background{background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-goodNews-shape.png) no-repeat center bottom; background-size: 65%; padding-top: 35px; padding-bottom: 25px;}
      .container .row .green-background h2{ margin-bottom: 0;}
      .get-it-now{margin-top: 35px;}
      .heading{padding-top: 110px;}
      .bottom{position:relative; top: 5px; margin-bottom: 0px; padding-top: 40px;}

      h2{margin-top:0px;margin-bottom:0px;}
      h3{margin-top:0px;margin-bottom:0px;}
      .product-name{font-weight:800;padding-top:10px;text-align:center;}
      .product-price{font-weight:bold;}

      .features-domain-name{height:117px;background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-features-domainName.png) no-repeat center bottom;}
      .features-email{height:117px; background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-features-email.png) no-repeat center bottom;}
      .features-wordpress{height:117px; background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-features-wordPress.png) no-repeat center bottom;}
      .features-wsb{height:117px; background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-websiteBuilder-icon.png) no-repeat center bottom;}
      .features-hosting{height:117px; background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-websiteBuilder-icon.png) no-repeat center bottom;}
      .features-online-store{height:117px; background: url([@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-websiteBuilder-icon.png) no-repeat center bottom;}
      .speach-bubble-left-div {margin-left:5%;width:90%;margin-top:10px;margin-bottom:10px;}
      .speach-bubble-left-green {color: #000;font-family: Tungsten, 'Tungsten A', 'Tungsten B', 'Helvetica Neue', 'Segoe UI', Segoe, Helvetica, Arial, 'Lucida Grande', sans-serif;font-size: 28px;font-size: 2.8rem;padding: 10px 20px;text-transform: uppercase;line-height: 1;background: url(data:image/svg+xml;base64,) no-repeat center center;background-size: cover;overflow: visible;}

  section#getItNow
    .container
      .col-xs-3
        div.hero-guy
      .col-xs-9
        .row.speach-bubble-left-green.text-center
          div.speach-bubble-left-div
            h2.uppercase Here you go...
            div.section
              h3.good-news-starter
        .row
          .container.bottom
            .row
              .col-sm-4.center
                .features-domain-name
                label.h3.uppercase.product-name Domain Name
                p Get a memorable online address, like dummy.com
                p.product-price $99.99/yr
              if productToDisplay == "WSB"
                .col-sm-4
                  .features-wsb
                  label.h3.uppercase.product-name Website Builder
                  p Easily create a professional website with simple drag-&-drop tools.
                  p.product-price $99.99/yr
              else if productToDisplay == "Hosting"
                .col-sm-4
                  .features-hosting
                  label.h3.uppercase.product-name Website Hosting
                  p Give your site a home that’ll keep it secure and running like sports car.
                  p THIS IS THE WRONG IMAGE
                  p.product-price $99.99/yr
              else if productToDisplay == "Store"
                .col-sm-4
                  .features-online-store
                  label.h3.uppercase.product-name Online Store
                  p Easily create a site that let’s you sell your stuff, accept credit cards and more.
                  p THIS IS THE WRONG IMAGE
                  p.product-price $99.99/yr
              else if productToDisplay == "WP"
                .col-sm-4
                  .features-wordpress
                  label.h3.uppercase.product-name Managed Wordpress
                  p Start a blog with WordPress and let us manage the technical stuff.
                  p.product-price $99.99/yr
              .col-sm-4
                .features-email
                label.h3.uppercase.product-name Office 365 Email
                p Get a professional email address, like yourname@dummy.com
                p.product-price $99.99/yr
            .get-it-now
              .row.text-center
                p.h3.center Get the bundle for $1/month for the first year*
              .row.text-center(style={'padding-top':'30px','padding-bottom':'10px'})
                btn.btn-purchase.btn-plan.btn-lg GET IT NOW
              .row.text-center(style={'padding-top':'10px'})
                p.h6 *Bundle cost is $12/year and $XXX.XX/year after the first year
