      include:js ../domain-selection.js

block content
 
  block getItNow
    // p4p.getItNow
    //+renderGoodNews("domain","price","image-path")

  block proSpecific
    +renderProSection()
  
  block product

  block office365
    // p4p.office365
    +renderOffice365Email()

  // p4p.whyUs
  section#why-godaddy
    .container
      .row
        .col-sm-10.col-sm-offset-1
          h2.text-center Why get online with us?
      .row
        .col-sm-4
          .feature.why-gd-world-leader
            +lazyImg('','','[@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-security.png','Pin Point Globe')
            h3 We're the world leader
            p It sounds like we’re bragging (and maybe we are just a little) but we manage over 58 million domains, more than anyone else in the world.
        .col-sm-4
          .feature.why-gd-support
            +lazyImg('','','[@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-support.png','TLD Boards')          
            h3 Our 24/7 support is awesome
            p That’s not just us bragging again – we have a case full of trophies to prove it. Better still, our support is free and available anytime, day or night.
        .col-sm-4
          .feature.why-gd-trust
            +lazyImg('','','[@T[link:<imageroot />]@T]fos/sales/themes/scotty/p4p/img/img-speed.png','Support Icon')
            h3 12 million people trust us
            p We can talk all day about our products, prices, support, yadda, yadda. The fact the millions of people across the world rely on us says more than we ever could.
 
  
  block divider
    .container
      .col-xs-12.section-divider(style={'margin-top':'10px','margin-bottom':'10px'})

  block got
    // p4p.got
