if (tldColumns)
  if (domainsPlansTitle)
    .row
      .col-md-10.col-md-offset-1.col-sm-12
        h2.text-center.domains-plans-mid-title !{domainsPlansTitle}
  .row
    each tldColumn in tldColumns
      .col-sm-6
        h6.tld-col-title !{markdownToHtml(tldColumn.title)}
        .row
          .col-sm-12
            each tldLookup in tldColumn.tldLookups
              .input-group.non-input-group
