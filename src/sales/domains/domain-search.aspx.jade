extends ../../templates/pages/landing-page

//- page specific mixins added here
mixin tldSuggestItem()

append pageStyles
  style.
    .test { color: red; }
    .plan-tile { margin-top: 70px; }
    .search-template .search-template-box { margin-bottom: 10px; }
    #domainSearch a { color: #333; font-weight: bold; margin-right: 30px; }
    #domainSearch { padding-bottom: 10px; }

    #domain-promo {background-color: #77c043; }
    #why-godaddy {background-color: #d9d9d9; }

block domainSearch
  //- remove domain search from top of page

block marquee
  section#marquee
    include ./domain-search/_marquee.jade
  section#domainSearch.bg-green-official
    .container
      .row
        .col-xs-12(style="padding-top:10px;")
          h4 Start your domain name search here
      +domainSearchInput()
      .row
        .col-xs-12
          a Domain Pricing
          a Bulk Domain Search
          a Transfer Domains      

block plans
  section#plans
    +renderPlanTiles(4)
      +planTile
        include ./domain-search/_plan-tld-com.jade
      +planTile
        include ./domain-search/_plan-tld-net.jade
      +planTile
        include ./domain-search/_plan-tld-org.jade
      +planTile
        include ./domain-search/_plan-tld-info.jade
      .container
        .row
          .col-sm-12
            h3.text-center So What All Do You Get?
        .row
          .col-md-4.col-sm-6
            .include-check Simple domain set up - no technical skills needed. Honest.
            .include-check Quickly forward your domain to any existing website
          .col-md-4.col-sm-6
            .include-check Up to 100 subdomains (like pics.coolexample.com) to customize your site.
            .include-check 100 professional email aliases (like sales@coolexample.com).
          .col-md-4.col-sm-6
            .include-check Real-time monitoring to keep you up and running

  section#domain-promo
    .container
      h2.text-center It All Starts With A Domain Name.
      .row
        .col-sm-6
          img(src != "[@T[link:<imageroot />]@T]fos/mike/img/hosting/GD_WebHosting_Module_Feature_Group_ScalableResources.png")
        .col-sm-6
          h3 Find Your Perfect Name
          p From classic domains like .com and .org to new domains like .menu, .repair, even .ninja (seriously), we can help you find the right name for your business.
          a.btn.btn-default-dark Get Started

  section#why-godaddy
    .container
      h2.text-center Why Choose A Domain Name From GoDaddy?
      .row
        .col-sm-6
          .feature
            img(src != "data:image/svg+xml;base64,")
            h3 World's Leading Domain Registrar
            p With over 12 million happy customers and 58 million domains under management, we know how to set you up for success online.
        .col-sm-6
          .feature
            img(src != "[@T[link:<imageroot />]@T]fos/mike/img/hosting/GD_WebHosting_Module_Feature_Group_Security.png")
            h3 More Names at Better Prices
            p We have 100s of domains to choose from.  And as the world's largest registrar, we can offer prices that other companies can only dream about.

  section.features-carousel-pro-carousel#test-carousel
    style.
      #test-carousel .plan-carousel-copy { font-family: 'Walsheim-Black'; font-size: 24px; }
      #test-carousel .btn { margin-top: 40px; }
    +carousel("my-carousel", 3)
      +carouselItem()
        .plan-carousel-copy(style="text-transform: uppercase;") FINALLY! A WEB ADDRESS THAT TELLS PEOPLE EXACTLY WHAT YOU DO
        .plan-carousel-copy .attorney, .church, .club, .xyz and .guide are now available.
        a.btn.btn-default-dark Search Domains Now
      +carouselItem()
        .plan-carousel-copy(style="text-transform: uppercase;") 30% OFF
        .plan-carousel-copy .global, .email, .website, .guru, .army now.
        a.btn.btn-default-dark Search Domains Now
      +carouselItem()
        .plan-carousel-copy SAVE up to 50% when you get online with
        .plan-carousel-copy .com, .net, .co, .org, .me, .biz, or .us
        a.btn.btn-default-dark Search Domains Now

block sections  
  +renderMidPageNav
    +priceBlock("$69.99", "year", "#alternate-products")

  section#speed-chart
    .container
      style.
        #speed-chart { min-height: 400px; }
        #speed-chart h3 { margin: 50px auto; text-align: center; }
        #speed-chart img { margin: 50px auto; display: block; }
      .speed-chart
        h3 Fast Sites = Happy Visitors
        img(src!="[@T[link:<imageroot />]@T]fos/mike/img/pro-wp-speed.png")
        .speed-text
          img()

  section#features.key-benefits-wrap.tile-section.bg-pro-gray(data-mid-nav-title="Why GoDaddy?")
    .container
      .row
        .col-sm-12(style="padding-top: 30px; padding-bottom: 30px;")
