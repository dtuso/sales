  - configStepParams.id                = configStepParams.id || "";
  - configStepParams.flagColor                = configStepParams.flagColor || "";
  - configStepParams.flagText                 = configStepParams.flagText || "";
  
  if(!configStepCss)
    - configStepCss = true;
    atlantis:webstash(type="css")
      style.
