append scripts
	script(type="text/javascript").
		var hpLoadVideo = 0;
		var autoplay = '\&autoplay=1';
		var vidLocation = "div.gdhp-bottom-banner";
		$(vidLocation).mouseenter(function() {
		  if(hpLoadVideo != 1)
		    {
		      hpLoadVideo = 1;
		      var src ='//www.youtube.com/embed/0wwflNeojVk?html5=1&rel=0';
		      $('#myVideoModal iframe').attr('src',src);
		      $('#myVideoModal').on('hidden.bs.modal', function () {          
		        $('#myVideoModal iframe').removeAttr('src');
		        $('#myVideoModal iframe').attr('src',src);
		      })
		      $('#myVideoModal').on('show.bs.modal', function () {          
		        $('#myVideoModal iframe').attr('src', src + autoplay);
		      })
		    }
		});

		$('.gdhp-top-banner').bind('click',function(event) {
			var $clickedElement = $(event.target);
			if(!$clickedElement.hasClass('gtld-pods')){
			  window.location.href='[@T[link:<relative path="/domains/search-new.aspx"><param name="ci" value="91184" /></relative>]@T]';
			}
		});
