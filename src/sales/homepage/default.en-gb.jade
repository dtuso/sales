    var tmsDefault = document.querySelectorAll("#marquee-tile-2 .tms-default");
    if (tmsDefault.length) {
      document.querySelectorAll("#marquee-tile-2 [data-tms-template]")[0].style.display = "none";
      document.querySelectorAll(".default-content")[0].style.display = "block";
    }
