extends ../_hero.jade

block append vars
  - heroParams.ci = "95658";
  - heroParams.ctaLink = "[@T[link:<relative path='/offers/online-business.aspx'><param name='ci' value='95658' /></relative>]@T]";
  - heroParams.ctaText = "[@L[cds.sales/homepage/heros/got:cta]@L]";
  - heroParams.price = "[@L[cds.sales/homepage/heros/got:price]@L]";
  - heroParams.classes += " got"
block append heroStyles
  style
    :less
      #marquee,.hero{background-color:#ecedee}
      .hero-wrapper{min-height:none}
      .hero.got{
        .products{text-align:center;margin-top:15%}
        .row{padding-left:20px}
        .product{font-size:170%;max-width:50%;margin:auto}
        .product div{font-size:50%}
        img.www{width:100%}
        img.pencil{padding: 4%;width:107%}
        img.envelope{padding: 8% 0;width:115%}
        .addition{text-align:center;font-size:200%;}
        .cta{width:100%}
        .pricing {font-size:150%}
        .price-wrapper{width:30%;display:inline-block}
        .disclaimer{font-size:55%;padding: 1% 0}
        @media only screen and (min-width : 480px){
         .addition{font-size:350%;}
         .product div{font-size:70%;}
        }
        @media only screen and (min-width : 650px){
         .products {margin-top:2%}
        }
        @media only screen and (min-width : 768px){
         .addition{font-size:450%;}
         .product div{font-size:100%;}
        }
        @media only screen and (min-width : 992px){
         .addition{font-size:550%;}
        }
      }

block heroContent
  .products.walsheim-black
    .product.col-xs-2
      img(src="data:image/svg+xml;base64,").www
      .domain [@L[cds.sales/homepage/heros/got:domain]@L]
    .addition.col-xs-2.col-sm-2 [@L[cds.sales/homepage/heros/got:additionSign]@L]
    .product.col-xs-2
      img(src="data:image/svg+xml;base64,").pencil
      .website [@L[cds.sales/homepage/heros/got:website]@L]
    .addition.col-xs-2.col-sm-2 [@L[cds.sales/homepage/heros/got:additionSign]@L]
    .product.col-xs-2
      img(src="data:image/svg+xml;base64,").envelope
      .email [@L[cds.sales/homepage/heros/got:email]@L]
  .pricing.walsheim-black
    .col-xs-11
      .priceText.bigtext [@L[cds.sales/homepage/heros/got:priceText]@L]
  .cta
      .col-xs-11
        a.btn.btn-md.btn-purchase [@L[cds.sales/homepage/heros/got:cta]@L]
        .disclaimer [@L[cds.sales/homepage/heros/got:disclaimer]@L]