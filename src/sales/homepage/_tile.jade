block vars
  - ctaLink = ctaLink || "";
  - ctaText = ctaText || "";
  - dataCi = dataCi || "";
  - containerClass = containerClass || "";
  
atlantis:webstash(type="css")
  block tileStyles
if ctaLink != ""
  .tile(data-url!=ctaLink data-ci=dataCi class=containerClass)
    .tile-content-wrapper
      block tileContent
else
  .tile(class=containerClass)
    .tile-content-wrapper
      block tileContent