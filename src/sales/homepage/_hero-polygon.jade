block vars
  - var polygons = [];
  - polygons["grey-top"] = {};
  - polygons["grey-mid"] = {svg:"data:image/svg+xml;base64,",png:"data:image/png;base64,"}
  - polygons["grey-bottom"] = {};
  - polygons["light-grey-bottom"] = {svg:"data:image/svg+xml;base64,",png:"data:image/png;base64,"}
  - var polygon = polygon || "grey-mid";
  - var polygon = polygons[polygon];
  - var marqueeBackground = marqueeBackground || "";
  - var marqueeFallback = marqueeFallback || marqueeBackground;
  - var classes = (classes? classes + " hero polygon": "hero polygon")
  - var dataCI = dataCI || "";
  - var ctaLink = ctaLink || "";
  - var xsBannerColor = xsBannerColor || "transparent";

atlantis:webstash(type="css")
  block heroStyles
    style.
      #marquee .hero-wrapper>div, .hero, .heroContentWrapper {min-height:inherit}
      #marquee #marqueeImage {background:url(!{marqueeBackground}) no-repeat top center;background-size:cover; height:175px}
      @media only screen and (min-width: 768px) {#marquee{background:url(!{marqueeBackground}) no-repeat top center;background-size:cover;}}
      #marquee .heroContentWrapper {margin-left: 14%;margin-right:14%; position:relative}
      #marquee .heroContent{position: absolute;top: 50%;-webkit-transform: translateY(-50%);-ms-transform: translateY(-50%);transform: translateY(-50%)}
      .hero-polygon.hero {background-color:!{xsBannerColor}; margin-left:-60px}
      .Explorer8 #marquee .hero.polygon{background:url(!{polygon.png}) no-repeat;}
      .Explorer8 #marquee #marqueeImage, .Explorer8 #marquee {background:url(!{marqueeFallback}) no-repeat;}
      .Explorer8 #marquee .heroContent{position:relative;}
      .Explorer8 #marquee .heroContentWrapper{padding:3% 0 0 7%; margin:0}
    style
      :less
        @media only screen and (min-width: 768px) {
          #marquee{
            .hero.polygon{background-color:transparent;background:url(!{polygon.svg});background-size:100% 100%; background-repeat:no-repeat;width:70%;
            }
          }
        }

.hero-polygon(class=classes data-url!=ctaLink, data-ci=dataCI)
  #marqueeImage.col-xs-12.visible-xs
  .heroContentWrapper
    .heroContent
      block heroContent