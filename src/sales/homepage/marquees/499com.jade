		#com499 .sprite.polygon { background-position: 0 0; width: 115px; height: 65px; }
		#com499 .sprite.com { background-position: 0 -75px; width: 65px; height: 16px; margin: 10px 0; }
		#com499 small { font-size: 65%; }

block marqueeContent
	.main-content
		.sale-flag
			div(style="РАСПРОДАЖА") [@L[cds.sales/homepage/marquee/499com:sale]@L]
		.main-content-container
			.headline.line1 [@L[cds.sales/homepage/marquee/499com:first-year]@L]
			.headline.line2 [@L[cds.sales/homepage/marquee/499com:sub-text]@L]
			a.btn.btn-lg.btn-cta(href!=ctaLink) [@L[cds.sales/homepage/marquee/499com:cta-text]@L]
			.disclaimer [@L[cds.sales/homepage/marquee/499com:disclaimer]@L] 
			.sprite.com
	script(type='text/javascript').
		$('#com499 .line1').html($('#com499 .line1').html().replace('{0}','[@T[productprice:<current productid="101" period="yearly" promocode="444888" htmlsymbol="false" />]@T]'))
		$('#com499 .disclaimer').html($('#com499 .disclaimer').html().replace('{0}','[@T[productprice:<list productid="105" dropdecimal="false" period="yearly" htmlsymbol="false" negative="parentheses"></list>]@T]'))
