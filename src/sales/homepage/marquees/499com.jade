---
extends ../../../layouts/homepage/marquee
append marqueeStyles
	style.
		#com499 { background: #333; cursor:pointer; font-family: 'Walsheim-Regular'; }
		#com499 .main-content { min-height: 400px; display: table; height: 400px; }
		#com499 .main-content-container { vertical-align: middle; display: table-cell; color: #fff; }
		#com499 .headline.line1 { font-size: 72px; color: #f47f00; margin-top: 30px; }
		#com499 .headline.line2 { font-size: 36px; color: #7abf4b; }
		#com499 .btn-cta { background-color: #f47f00; color: #fff; border-bottom: 3px solid #b3602f; width: initial; font-family: Walsheim-Medium; font-size: 20px; padding-left: 30px; padding-right: 30px; }
		#com499 .disclaimer { font-size: 12px; color: #fff; font-family: 'Walsheim-Regular'; margin: 10px 0; }
		#com499 .sale-flag { background: url([@T[link:<imageroot />]@T]fos/hp/rebrand/img/com499_marquee_sprite.png) 0 0 no-repeat; font-size: 24px; box-sizing: border-box; width: 124px; height: 70px; background-size: cover; padding-top: 10px; text-align: center; }
		html[lang|="tr"] #com499 .sale-flag, html[lang|="nl"] #com499 .sale-flag, html[lang|="el"] #com499 .sale-flag, html[lang|="ru"] #com499 .sale-flag, html[lang|="uk"] #com499 .sale-flag { font-size: 24px; width: 190px; height: 107px;  }
