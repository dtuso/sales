extends ../../../layouts/homepage/marquee

append vars
  - var classes = "mwp-flash";
  - var ciCode = 99173;
  - var ctaLink = "[@T[link:<relative path='/hosting/wordpress-hosting.aspx'><param name='ci' value='"+ciCode+"'/></relative>]@T]";
  - var polyColor = "rgb(255,138,0)";

block append marqueeStyles
  style
    :less
      .marquee#mwp-flash-jazzy{background:url([@T[link:<imageroot />]@T]fos/hp/rebrand/img/stopwatch-background.png) no-repeat top center;width:100%;min-width:1000px;height:400px; cursor:pointer; font-size:16px;color: #333; 
        .container{height:inherit;position:relative;}
        .content{width:50%; position: absolute;top: 50%;-webkit-transform: translateY(-50%);-ms-transform: translateY(-50%);transform: translateY(-50%);
          mark{background-color: #fedc45;}
          .font-lg { font-size: 2.25em; margin-top: .25em; margin-bottom: .25em; }
          .font-md { font-size: 1.5em; margin-top: .25em; margin-bottom: .25em; }
          .font-sm { font-size: 1.25em; margin-top: .25em; margin-bottom: .25em; }
          .black { font-family: 'Walsheim-Black', 'Arial Black', sans-serif; text-transform: uppercase; }
          .bold { font-family: 'Walsheim-Bold', 'Arial Black', sans-serif; text-transform: uppercase; }
          .text-primary-o {color: #77c043;}
          .text-purchase {font-size: 1.25em;color:#ef6c0f;}
          .sale-text {font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;}
          a{text-transform:uppercase;margin-top: .8em;}
          img{display:block; width:4.5em;padding-top:1em}
          .disclaimer{color: #333; font-size: 10px; margin-top:2em;font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;}
        }
      }
      .Explorer8 .marquee#mwp-flash-jazzy .content {top: 0;}
block marqueeContent
  .content.mwp-flash-jazzy.js-gdhpclick(data-url!='[@T[link:<relative path="/hosting/wordpress-hosting.aspx"><param name="ci" value='"+ciCode+"'/></relative>]@T]')
    mark.bold.font-sm [@L[cds.tmsv2/content/homepage/mwp-flash/hero:flag-date]@L]
    h2.black [@L[cds.tmsv2/content/homepage/mwp-flash/hero:headline]@L]
    p.bold.font-md [@L[cds.tmsv2/content/homepage/mwp-flash/hero:sub-headline]@L]
    a.bold.btn.btn-lg.btn-primary [@L[cds.tmsv2/content/homepage/mwp-flash/hero:sub-headline]@L]
    p.font-sm.disclaimer [@L[cds.tmsv2/content/homepage/mwp-flash/hero:sub-headline]@L]
