atlantis:webstash(type="css")
  style.
    .hosting-tile{background-color:#fff;color:#333;position:relative;font-size:24px;line-height:25px;}
    .hosting-tile-logo-wrap{position:absolute;}
    .hosting-tile-logo{background-position: -15px -1757px;width:440px;height:140px;margin:30px 20px 20px}
    .hosting-tile-text-wrap{padding-top:40%;}
    .hosting-tile-text{width:440px;margin:0 10px 0 20px;height:100%;font-family:'Walsheim-Regular', Arial, sans-serif;}
    .hosting-tile-headline{font-size:36px;line-height:36px;font-family:'Walsheim-Black', 'Arial Black', sans-serif;color:#77C043}
    .hosting-tile-maintext,.hosting-tile-subtext{font-family:'Walsheim-Black', 'Arial Black', sans-serif;}
    .hosting-tile-disclaimer{font-size:22px;padding-top:10px;}
    .hosting-tile-disclaimer>.orange-warning{color:#EF6C0F;display:inline;font-family:'Walsheim-Black', 'Arial Black', sans-serif;font-size:22px;}
    .hosting-tile-pricetext{font-size:24px;line-height:24px;margin-bottom:5px;color:#EF6C0F;}
    span.hosting-tile-price{display:inline;font-family:'Walsheim-Black', 'Arial Black', sans-serif;}
    .hosting-tile>.host-btn-wrap{position:absolute;left:20px;bottom:20px;}
    .hosting-tile>.host-btn-wrap>.btn-lrg{float:left;margin-right:10px;width:100%;min-width:240px;height:100%;white-space:normal;}
    html[lang|="el"] .hosting-tile-maintext, html[lang|="el"] .hosting-tile-subtext{font-size:22px;line-height:22px}

#gdhp-hostingtile.gdhp-tile.hosting-tile.js-gdhpclick(data-url!="[@T[link:<relative path='/hosting/web-hosting.aspx'><param name='ci' value='93458' /></relative>]@T]",data-ci="93458")
  .hosting-tile-logo-wrap
    .hosting-tile-logo.tile-sprite
  .hosting-tile-text-wrap
    .hosting-tile-text
      span.hosting-tile-headline [@L[cds.sales/homepage/tile/hosting:host-tile-web-hosting]@L]
      span.hosting-tile-maintext [@L[cds.sales/homepage/tile/hosting:host-tile-maintext]@L]
      span.hosting-tile-subtext [@L[cds.sales/homepage/tile/hosting:host-tile-subtext]@L]
      .hosting-tile-disclaimer [@L[cds.sales/homepage/tile/hosting:host-tile-disclaimer]@L]
      span.b.hosting-tile-pricetext [@L[cds.sales/homepage/tile/hosting:host-tile-starting]@L]
        span.hosting-tile-price 
          | ##if(countrySiteAny(in))
          | [@T[productprice:<current productid="294057" period="monthly" />]@T]
          | ##else
          | [@T[productprice:<current productid="32051" period="monthly" />]@T]
          | ##endif
          | [@L[cds.sales/homepage/tile/hosting:host-tile-month]@L]
  .host-btn-wrap
    a#gdhp-hostingtile-btn.btn.btn-lrg.btn-orange(href!="javascript:void(0)",data-ci="93458") [@L[cds.sales/homepage/tile/hosting:host-tile-btn]@L]