extend ../_tile.jade

block append vars
  - ctaLink = "#";
  - dataCi = "95729";
  - containerClass = "marquee-tile-p4p";

block append tileStyles
  style
    :less
      .marquee-tile-p4p{background-color:#77c043;background-repeat:no-repeat;background-position:95% 100%;background-size:120px 110px;background-image:url(data:image/svg+xml;base64,)}
      .marquee-tile-p4p .tile-content-wrapper{padding:20px 10px;}
      .marquee-tile-p4p .header-text{font-size:18px;color:#333;text-transform:uppercase;line-height:20px;margin-bottom:10px;}
      .marquee-tile-p4p .btn-group{width:100%;}
      .marquee-tile-p4p button{font-family:'Walsheim-Black', 'Arial Black', sans-serif;width:80%;text-align:left;font-size:18px;text-transform:none;padding-top:0px;padding-bottom:0px;}
      .marquee-tile-p4p .btn-warning{border-top-width:3px;border-bottom-width:1px;}
      .marquee-tile-p4p .caret{float:right;margin-top:3px;}
      .marquee-tile-p4p ul{width:80%;border:none;}
      .marquee-tile-p4p ul li{font-family:'Walsheim-Black', 'Arial Black', sans-serif;}
      .marquee-tile-p4p ul li a{font-family:'Walsheim-Black', 'Arial Black', sans-serif;font-size:18px;text-transform:none;padding:2px 10px;}
      .marquee-tile-p4p ul li a:hover{background-color:#fcc335;color:#333;}
      .marquee-tile-p4p a.cta-link{display:block;font-size:16px;color:#fff;text-transform:uppercase;font-family:'Walsheim-Black', 'Arial Black', sans-serif;margin-top:10px;}

block tileContent
  .container
    .row
      .col-sm-9
        .left-content-wrapper
          .header-text.walsheim-black [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-header-text]@L]
          //- .btn-group
          //-   button.btn.btn-xs.dropdown-toggle.btn-warning(type="button" id=containerClass+"-dropdown" data-toggle="dropdown") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-confusing]@L]
          //-     span.caret
          .sf-p4p-list
            .sf-p4p-list-content [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-confusing]@L]
              ul.p4p-list-content(style="display:none")
                li.btn-warning(data-value="1")
                  .p4p-li-content(data-main="true") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-intimidating]@L]
                li.btn-warning(data-value="2")
                  .p4p-li-content(data-main="true") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-confusing]@L]
                li.btn-warning(data-value="3")
                  .p4p-li-content(data-main="true") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-annoying]@L]
                li.btn-warning(data-value="4")
                  .p4p-li-content(data-main="true") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-frustration]@L]
          a.cta-link.walsheim-black(href=ctaLink) [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-cta-text]@L]
      .col-sm-3
        .right-content-wrapper
