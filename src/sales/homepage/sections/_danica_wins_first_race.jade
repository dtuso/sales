extends ./_rightArrowTwoColumn.jade

block append vars
  - sectionID = "danica-first-win";
  - bkgImage = "[@T[link:<imageroot />]@T]fos/hp/rebrand/img/danica-congratulations-module-background-04.jpg";
block append rightArrowTwoColumnsStyles
  style
    :less
      #danica-first-win{
        max-height:300px;
        background-size:cover;
        background-position:center center;
        .TopText{color:#77C043;font-size:37px;text-transform:uppercase;margin-top:82px;}
        .MiddleText{color:#77C043;font-size:39px;text-transform:uppercase;}
        .BottomText{color:#77C043;font-size:48px;text-transform:uppercase;margin-bottom:82px;}
        .dash{letter-spacing: -.5rem;margin-right:15px;}
      }
      @media only screen and (min-width:480px) {
        #danica-first-win{
          .TopText{font-size:22px}
          .MiddleText{font-size:44px;line-height:34px;}
          .BottomText{font-size:40px;line-height:40px;}
        }
      }
      @media only screen and (min-width:992px) {
        #danica-first-win{
          .TopText{font-size:30px}
          .MiddleText{font-size:60px;line-height:40px;}
          .BottomText{font-size:50px;line-height:56px;}
        }
      }
      @media only screen and (min-width:1200px) {
        #danica-first-win{
          .TopText{font-size:37px}
          .MiddleText{font-size:74px;line-height:48px;}
          .BottomText{font-size:60px;line-height:64px;}
        }
      }
      
block leftContent
  .TopText.walsheim-black Congratulations, Danica!
  .MiddleText.tungsten On your history-making
  .BottomText.walsheim-black 
    span.dash ------------------------- 
    |  win!