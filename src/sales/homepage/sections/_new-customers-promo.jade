        .feature.new-customers-gd-pro
          <!--[if lt IE 9]>
          +lazyImg('','','[@T[link:<imageroot />]@T]fos/hp/rebrand/img/gd-pro-icon.svg','GoDaddy Pro Logo')
          <![endif]-->
          +lazyImg('svgfallback','','[@T[link:<imageroot />]@T]fos/hp/rebrand/img/gd-pro-icon.svg','GoDaddy Pro Logo')
