          p [@L[cds.sales/homepage/sections/_new-customers-promo:ssl-cert-body]@L]
          a.btn.btn-default-dark.walsheim-black(data-url!="[@T[link:<relative path='/ssl/ssl-certificates.aspx'><param name='ci' value='95785' /></relative>]@T]") [@L[cds.sales/homepage/sections/_new-customers-promo:cta-text]@L]
