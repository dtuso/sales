block heroVars
  - rightArrow = rightArrow || {};
  - rightArrow.ci = rightArrow.ci || "";
  - rightArrow.ctaLink = rightArrow.ctaLink || "";
  - rightArrow.classes = rightArrow.classes || "hero right-arrow";
  - rightArrow.arrowColor = rightArrow.arrowColor || "rgb(119,192,67)";
  - rightArrow.arrowTextColor = rightArrow.arrowTextColor || "#fff";
  - rightArrow.backgroundColor = rightArrow.backgroundColor || "transparent";
  - rightArrow.backgroundTextColor = rightArrow.backgroundTextColor || "#000";


// start right-arrow hero section
atlantis:webstash(type="css")
  block rightArrowStyles
    - rightArrow.arrowSvg = rightArrow.arrowSvg || '<svg preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" version="1.1" x="0" y="0" viewBox="0 0 45 315" enable-background="new 0 0 45 315" xml:space="preserve"><path fill-rule="evenodd" fill="'+rightArrow.arrowColor+'" clip-rule="evenodd" d="M0 0l45 158L0 315V0z"/></svg>';
    - rightArrow.pngArrowFallback = rightArrow.pngArrowFallback || 'url([@T[link:<imageroot />]@T]fos/hp/rebrand/img/arrow-green.png) no-repeat';
    style.
      .hero-wrapper>div{min-height:inherit;}
      .right-arrow.hero {min-height: inherit;line-height:.9;white-space:nowrap;background: !{rightArrow.backgroundColor}}
      .right-arrow>div{min-height:inherit}
      .right-arrow .left{background-color:!{rightArrow.arrowColor};color:!{rightArrow.arrowTextColor}}
      .right-arrow .right{background-color:!{rightArrow.backgroundColor}; color:!{rightArrow.backgroundTextColor}}
      .right-arrow .dash{letter-spacing:-.2rem}
      .right-arrow .arrow{background-color:!{rightArrow.backgroundColor}; background:url('data:image/svg+xml;utf8,!{rightArrow.arrowSvg}') no-repeat}
      .right-arrow .leftContent,.rightContent{position:absolute;top: 50%;-webkit-transform: translateY(-50%);-ms-transform: translateY(-50%);transform: translateY(-50%);}
      .right-arrow .leftContent{width:80%; margin-left:10%;}
      .right-arrow .rightContent{width:70%}
      .right-arrow .rightContent .btn{margin:5% 0}
      .Explorer .right-arrow .arrow{background-size: 100% 100%;}

div(class!=rightArrow.classes data-url!= rightArrow.ctaLink)
  block heroContent
    .left.col-xs-6
      .leftContent
        block leftContent
    .col-xs-1.arrow
    script.
      (function(){
      function IEVersion(){
        var ua = window.navigator.userAgent;
        if (ua.indexOf('MSIE 8')>0 || ua.indexOf('MSIE 9')>0){
          return '8-9';
        }
        else if(ua.indexOf('MSIE ')>0 || ua.indexOf('Trident')>0){
          return '10-current';
        }
      }
      var ieVersion = IEVersion();
        if(ieVersion != undefined)
          if(ieVersion == '10-11+'){
            var utf8 = '!{rightArrow.arrowSvg}';
            var base64 = window.btoa(utf8);
            $('.right-arrow .arrow').css('background','url(data:image/svg+xml;base64,'+base64+') no-repeat');
            }
          else{
            $('.right-arrow .arrow').css('background','!{rightArrow.pngArrowFallback}');
          }
        })();
    .right.col-xs-5
      .rightContent
        block rightContent

// end right-arrow hero section