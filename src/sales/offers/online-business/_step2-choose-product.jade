atlantis:webstash(type="css")
  style.
    #step2-choose-product {display: none;}
    #step2-choose-product .choose-header {margin: 30px 0 40px;}
    #step2-choose-product .api-c-failure-modal {display: none;}
    #step2-choose-product .pro-plans {
      margin-top:0px; /* override the -210px from sahara.css */
    }

    
section#step2-choose-product

  .bg-green-new
    .container

      .row
        .col-sm-12
          h2 [@L[cds.sales/offers/online-business:32573-youve-got-your-domain]@L]

  .bg-gray-light  
    .container.pro-plans

      .row
        .col-sm-12
          h4.choose-header [@L[cds.sales/offers/online-business:32573-step-2-choose-your-website]@L]

      .row
        .col-md-5.col-sm-12.plan-tile.plan-pro
          .pro-plan-wrap
            .plan-flag [@L[cds.sales/offers/online-business:32573-choose-wsb]@L]
            h2 [@L[cds.sales/offers/online-business:32573-choose-wsb-text]@L]
            h4 [@L[cds.sales/offers/online-business:32573-choose-wsb-all-this-for-just-text]@L]
            .plan-price-wrap [@L[cds.sales/offers/online-business:32573-choose-wsb-all-this-for-just-price]@L]
              .plan-inline-disclaimer [@L[cds.sales/offers/online-business:32573-choose-wsb-text-price-disclaimer]@L] [@L[cds.sales/offers/online-business:32573-choose-wsb-text-price-disclaimer-link]@L]
            button.btn.btn-md.btn-block.btn-purchase.product-wsb [@L[cds.sales/offers/online-business:32573-choose-select-button]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-wsb-bullet-1]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-wsb-bullet-2]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-wsb-bullet-3]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-wsb-bullet-4]@L]
              
        .col-md-2.col-sm-12
          p Or

        .col-md-5.col-sm-12.plan-tile.plan-pro
          .pro-plan-wrap
            .plan-flag [@L[cds.sales/offers/online-business:32573-choose-ols]@L]
            h2 [@L[cds.sales/offers/online-business:32573-choose-ols-text]@L]
            h4 [@L[cds.sales/offers/online-business:32573-choose-ols-all-this-for-just-text]@L]
            .plan-price-wrap [@L[cds.sales/offers/online-business:32573-choose-ols-all-this-for-just-price]@L]
              .plan-inline-disclaimer [@L[cds.sales/offers/online-business:32573-choose-ols-text-price-disclaimer]@L] [@L[cds.sales/offers/online-business:32573-choose-ols-text-price-disclaimer-link]@L]
            button.btn.btn-md.btn-block.btn-purchase.product-ols [@L[cds.sales/offers/online-business:32573-choose-select-button]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-ols-bullet-1]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-ols-bullet-2]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-ols-bullet-3]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-ols-bullet-4]@L]
            .include-check-green [@L[cds.sales/offers/online-business:32573-choose-ols-bullet-5]@L]

  .sf-dialog.api-c-failure-modal
    p [@L[cds.sales/offers/online-business:32573-get-it-now-error]@L]
