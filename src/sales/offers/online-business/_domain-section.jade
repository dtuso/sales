atlantis:webstash(type="css")
  style.
    #domains .disclaimer p {
      font-size: 14px;
      color: #666;
    }
    #domains .features.features-wrap {
      min-height: 360px;
    }
    #domainSection1What, #domainSection2Email {
      margin: 20px 0;
    }

- var domainSectionOneText = '<div class="include-check-green">[@L[cds.sales/offers/online-business:32573-whats-a-domain-bullet-one]@L]</div>';
- domainSectionOneText += '<div class="include-check-green">[@L[cds.sales/offers/online-business:32573-whats-a-domain-bullet-two]@L]</div>';
- var domainSectionTwoText = '<div class="include-check-green">[@L[cds.sales/offers/online-business:32573-email-even-better-bullet-1]@L]</div>';
- domainSectionTwoText += '<div class="include-check-green">[@L[cds.sales/offers/online-business:32573-email-even-better-bullet-2]@L]</div>';


section#domains

  //- mixin featuresTemplates(presentationTemplate, featuresId, additionalWrapClasses, lazyLoad, backgroundImage, featuresImg, featuresImgAltText, title, subtitle, text, buttonText, buttonUrl, buttonColor )
  +featuresTemplates(
    "featuresLeftText", 
    "domainSection1What", 
    null, 
    true, 
    "", 
    "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/offers/online-business/img-domainFeature1.png", 
    null, 
    "<mark>[@L[cds.sales/offers/online-business:32573-whats-a-domain-heading]@L]</mark> [@L[cds.sales/offers/online-business:32573-whats-a-domain-text]@L]", 
    "[@L[cds.sales/offers/online-business:32573-whats-a-domain-subtext]@L]", 
    domainSectionOneText, 
    null, null, null)

  +featuresTemplates(
    "featuresLeftText", 
    "domainSection2Email", 
    null, 
    true, 
    "", 
    "[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/offers/online-business/img-domainFeature2.png", 
    null, 
    "[@L[cds.sales/offers/online-business:32573-email-even-better-heading]@L]", 
    "[@L[cds.sales/offers/online-business:32573-email-even-better-text]@L]", 
    domainSectionTwoText, 
    null, null, null)


  .container
    .row.disclaimer
      .col-sm-12 
        p.disclaimers-text [@L[cds.sales/offers/online-business:32573-plus-inline-disclaimer]@L]
        

