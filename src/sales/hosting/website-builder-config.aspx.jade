      generateGetFound: function(gf){
        var radioName = "getFoundOption";
        var parentID = $("#getFoundList");
        var addonTemplate = _.template($( "script.addonTemplate" ).html());

        parentID.empty();

        if(!jQuery.isEmptyObject(gf))
