atlantis:webstash(type="css")
  style.
    #marquee {
      margin:0 auto; 
      background-color: #77c043;
    }
    #marquee .marquee {
      position: relative;
    }
    #marquee .marquee .marquee-flag {
      background: url("data:image/svg+xml;base64,") no-repeat scroll center center / cover rgba(0, 0, 0, 0);
      text-transform: uppercase;
      top: -20px;
      right: 30px;
      position: absolute;
    }
    #marquee .contact-support {
      font-weight: 800;
    }
section#marquee
  .container.marquee.marquee-white
    .marquee-flag [@L[cds.sales/hosting/wordpress-hosting:wordpress-hosting-4-999UptimeGuarantee]@L]
    .row
      .col-sm-7.marquee-content-wrapper
        h1.marquee-product-name [@L[cds.sales/hosting/wordpress-hosting:wordpress-hosting-3-MANAGEDWORDPRESS]@L]
        h2.marquee-product-description [@L[cds.sales/hosting/wordpress-hosting:wordpress-hosting-11-YouHaveBetterThingsToDoThanManage]@L]
        button.btn.btn-medium.btn-purchase Plan Pricing
        .marquee-product-text
        .contact-support [@L[cds.sales/gd/hosting/wordpress-hosting:professional-Hosting-Support]@L] [@T[support:<tes.CLOUDSERVERCONCIERGE_PHONE />]@T]

        