include ../../../templates/tabbed-carousel-mixin.jade
include ../../../templates/carousel-mixin.jade
- tabbedCarousel = tabbedCarousel || {};
- tabbedCarousel.title = "[@L[cds.sales/gd/hosting/website-builder:apps-modal-header]@L]";
- tabbedCarousel.subtitle = "[@L[cds.sales/gd/hosting/website-builder:apps-modal-description]@L]";
- tabbedCarousel.numOfTabs= 6;
- tabbedCarousel.lazyLoad = true;
- tabbedCarousel.id = "carousel-social-media";
- tabbedCarousel.textCenter = true;

append vars
  - title = "Simplify your bookkeeping. Get back to business.";
  - subtitle = "Spend less time on paperwork and more time with customers.";
  - numOfTabs= 6;
  - lazyLoad = true;
  - id = "carousel-social-media"

+renderTabbedCarousel(tabbedCarousel)
  +addTab({icon:"uxicon-facebook-box",logo:"",imageAlternateText:"",text:"[@L[cds.sales/gd/hosting/website-builder:apps-modal-facebook-title]@L]"})
  +addTab({icon:"uxicon-twitter",logo:"",imageAlternateText:"",text:"[@L[cds.sales/gd/hosting/website-builder:apps-modal-twitter-title]@L]"})
  +addTab({icon:"uxicon-youtube-box",logo:"",imageAlternateText:"",text:"[@L[cds.sales/gd/hosting/website-builder:apps-modal-youtube-title]@L]"})
  +addTab({icon:"uxicon-yelp",logo:"",imageAlternateText:"",text:"[@L[cds.sales/gd/hosting/website-builder:apps-modal-yelp-title]@L]"})
  +addTab({icon:"uxicon-paypal",logo:"",imageAlternateText:"",text:"[@L[cds.sales/gd/hosting/website-builder:apps-modal-paypal-title]@L]"})
  +addTab({icon:"uxicon-homefinder",logo:"",imageAlternateText:"",text:"[@L[cds.sales/gd/hosting/website-builder:apps-modal-homefinder-title]@L]"})
+carousel(tabbedCarousel.id ,tabbedCarousel.numOfTabs,{css:true})
  +carouselItem(tabbedCarousel)
    img.img-responsive.img-center(src!="[@T[link:<imageroot />]@T]fos/sales/themes/montezuma/hosting/website-builder/wsb-apps-image-facebook-int.jpg")
