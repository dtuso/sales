                  var items = item.split('=');
                  if (items[0] === param) found = true;
                  all.push(items[0] + '=' + (items[0] === param ? value : items[1]));
                  return all;
              }, []).join('&');

          return front + '?' + newQS + (!found ? (newQS.length > 0 ? '&' : '') + param + '=' + value : '');
