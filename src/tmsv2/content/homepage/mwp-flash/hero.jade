extends ../_hero-left-arrow.jade

append vars
  - var classes = "mwp-flash";
  - var ciCode = 99173;
  - var ctaLink = "[@T[link:<relative path='/hosting/wordpress-hosting.aspx'><param name='ci' value='"+ciCode+"'/></relative>]@T]";
  - var polyColor = "white";

block append styles
  style
    :less
      #hero-wrapper .mwp-flash{
      .left-container{
        .left-content{
          h2 {width:85%;}
          .text-purchase{font-size:1.5em;}
          .disclaimer{padding-top:3em;}
        }
      }
      .right-container{background:#77c043;}
        .right-content{
        #img-container{width:15em;height:15em;background:url("data:image/svg+xml;base64,") top center no-repeat;}
        .Explorer8 #img-container{width:15em;height:15em;background:url("[@T[link:<imageroot />]@T]fos/tmsv2/content/homepage/tld-com-flash-jazzy/stopwatch.png") top center no-repeat;}
        }
        .Explorer8 .marquee#mwp-flash.flag{background-color:#fedc45;}

        }


block leftContent
  .flag.bold.font-sm
    mark [@L[cds.tmsv2/content/homepage/mwp-flash/hero:flag-date]@L]
  h2.font-lg.black [@L[cds.tmsv2/content/homepage/mwp-flash/hero:headline]@L]
  p.bold.font-md [@L[cds.tmsv2/content/homepage/mwp-flash/hero:sub-headline]@L]
  a.bold.btn.btn-md.btn-lg.btn-primary [@L[cds.tmsv2/content/homepage/mwp-flash/hero:getItNow]@L]
  p.font-sm.disclaimer [@L[cds.tmsv2/content/homepage/mwp-flash/hero:disclaimer]@L]
block rightContent
  #img-container