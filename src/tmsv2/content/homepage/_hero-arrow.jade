block vars
  - ciCode = ""
  - ctaLink = ""
  - classes = "";
  - polyColor = "";
  - polyPoint = "30";

block styles
  style.
    /* template layout styling */
    .hero-arrow { min-height: inherit; max-height: inherit; height: 100%; width: 100%; min-width: inherit; max-width: inherit; color: #333; position: relative; }
    .hero-arrow .left-container, .hero-arrow .right-container { width: 50%; float: left; min-height: inherit; position: relative; }
    .hero-arrow .left-container { box-sizing: content-box; margin-left: -1000px; padding-left: 1000px; }
    .hero-arrow .left-content, .hero-arrow .right-content { position: absolute;top: 50%;-webkit-transform: translateY(-50%);-ms-transform: translateY(-50%);transform: translateY(-50%);}
    .Explorer8 .hero-arrow .left-content, .Explorer8 .hero-arrow .right-content { position: relative;top: 0;}
    .hero-arrow .left-content { padding: 5% 0% 5% 0; }
    .hero-arrow .right-content { padding: 5% 5% 5% 18%; word-break: break-word; max-width:100%;}
    .hero-arrow .left-content > *:not(.btn), .hero-arrow .right-content > *:not(.btn) { margin-top: .25em !important; margin-bottom: .25em !important; line-height: 1; }
    .hero-arrow .left-content > *:last-child, .hero-arrow .right-content > *:first-child { margin-top: 0 !important;}
    .hero-arrow .left-content > *:last-child, .hero-arrow .right-content > *:last-child { margin-bottom: 0 !important;}
    .hero-arrow mark { line-height: inherit; }
    .hero-arrow mark:after { height: 1em; }
    
    /* content styling */
    
    /* APPROACH #1 */
    /* apply classes to specify the font family/size/color */
    /* allows for atomically creating a look/feel for each hero item */
    /* color is covered by UXCore classes so we just need family/size classes here */
    .hero-arrow .font-lg { font-size: 2.25em; margin-top: .25em; margin-bottom: .25em; }
    .hero-arrow .font-md { font-size: 1.5em; margin-top: .25em; margin-bottom: .25em; }
    .hero-arrow .font-sm { font-size: 1em; margin-top: .25em; margin-bottom: .25em; }
    .hero-arrow .text-white { color:#fff;}
    .hero-arrow .black { font-family: 'Walsheim-Black', 'Arial Black', sans-serif; text-transform: uppercase; }
    .hero-arrow .bold { font-family: 'Walsheim-Bold', 'Arial Black', sans-serif; text-transform: uppercase; }

    /* APPROACH #2 */
    /* apply classes the group the whole 'look and feel' */
    /* provides for easily making things consistent - there are only a few styles in the hero */
    .hero-arrow .product { font-size: 1.5em; text-transform: uppercase; font-family: 'Walsheim-Black', 'Arial Black', sans-serif; }
    .hero-arrow .big-green { font-size: 2em; color: #77c043; text-transform: uppercase; font-family: 'Walsheim-Black', 'Arial Black', sans-serif; }
    .hero-arrow .sub-title { font-size: 1.5em; color: #333; font-family: 'Walsheim-Bold', 'Arial Black', sans-serif; text-transform: uppercase;  }
    
    .hero-arrow .price { text-transform: uppercase; font-size: 1em; font-family: 'Walsheim-Bold', 'Arial Black', sans-serif;  }
    .hero-arrow .price .text-purchase { font-size: 1.25em; }

    .hero-arrow .disclaimer { color: #333; font-size: 10px; position: relative; bottom: 2em; padding-top:2em; }
    .hero-arrow .dash { letter-spacing:-.2em; }
    .hero-arrow .underline { text-decoration:underline; }

.hero.hero-arrow(class!=classes data-url!=ctaLink data-ci=ciCode)
  .left-container(style="background:#{polyColor};")
    .left-content
      block leftContent

  .right-container
    svg.hidden-xs(preserveAspectRatio="none" style="position: absolute; height: 100%;left: -1px; width: 23%;max-width: 45px;" viewBox="0 0 100 100")
      polygon(points="0,0 100,#{polyPoint} 0,100" style="fill:#{polyColor};")
    .right-content
      block rightContent

