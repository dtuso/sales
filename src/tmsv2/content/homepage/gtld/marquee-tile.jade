extends ../../../../sales/homepage/_tile-2col_base.jade

append vars
  - ctaLink = "[@T[link:<relative path='/domains/domain-name-search.aspx'><param name='ci' value='95717' /></relative>]@T]";
  - dataCi = 95717;
  - containerClass = "gtld-marquee-tile";

block append tileStyles
  style
    :less
      .gtld-marquee-tile{background-size: cover;background-position: center center;background-repeat: no-repeat;background-image: url(data:image/svg+xml;base64,);}
      .gtld-marquee-tile .left-content-wrapper{padding-left:10%;}
      .gtld-marquee-tile .header-text{font-size:40px;color:#333;margin:25px 0 0 10px;}
      .gtld-marquee-tile .gtld-links-wrapper{padding-left:-15px;}
      .gtld-marquee-tile ul{list-style-type:none;padding:20px 0 0 20px;}
      .gtld-marquee-tile li{color:#77c043;font-size:20px;line-height:25px;margin:0;} 
      .gtld-marquee-tile li:hover{color:#00a55e;}

block leftContent
  .header-wrapper
    h2.header-text.walsheim-black [@L[cds.sales/homepage/tile/marquee-tile-gtld:header-text]@L]
block rightContent
  .gtld-links-wrapper
    ul
      li.walsheim-black.tld-guru(data-url!="[@T[link:<relative path='/tlds/guru'><param name='ci' value='95716' /></relative>]@T]" data-ci=95716) .guru
      li.walsheim-black.tld-club(data-url!="[@T[link:<relative path='/tlds/club'><param name='ci' value='95713' /></relative>]@T]" data-ci=95713) .club
      li.walsheim-black.tld-company(data-url!="[@T[link:<relative path='/tlds/company'><param name='ci' value='95714' /></relative>]@T]" data-ci=95714) .company
      li.walsheim-black.tld-email(data-url!="[@T[link:<relative path='/tlds/email'><param name='ci' value='95715' /></relative>]@T]" data-ci=95715) .email