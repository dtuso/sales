extends ../_hero-small.jade

append vars
  - ctaLink = "[@T[link:<relative path='/email-account.aspx'><param name='ci' value='97911' /></relative>]@T]";  
  - dataCi = 97911;
  - containerClass = "merch-tile-0365-biz-email";
  - logoImage = "data:image/svg+xml;base64,"
  - logoImageFallback = "[@T[link:<imageroot />]@T]fos/hp/rebrand/img/sb/india-pro-email-tertiary-tile-icon@2x.png";
  - bodyText = "[@L[cds.tmsv2/content/homepage/o365-biz-email/merch-tile:promo-text]@L]";
  - ctaText = "[@L[cds.tmsv2/content/homepage/o365-biz-email/merch-tile:cta]@L]";
  - logoText = false;

block scripts
  script.
    var savings = Math.max([@T[productcompare:<percent primaryproductid="31805" secondaryproductid="31805" />]@T],[@T[productcompare:<percent primaryproductid="31825" secondaryproductid="31825" />]@T],[@T[productcompare:<percent primaryproductid="31841" secondaryproductid="31841" />]@T]);
    $cta=$('.merch-tile-0365-biz-email a');
    if(savings<5)
      $cta.html('"[@L[cds.tmsv2/content/homepage/o365-biz-email/merch-tile:cta-fallback]@L]"')
    else
      $cta.html($cta.html().replace("{0}", (savings/100).toLocaleString('[@T[localization:<language full="true" />]@T]', { style:'percent', maximumSignificantDigits: 2})));
    $cta.show();