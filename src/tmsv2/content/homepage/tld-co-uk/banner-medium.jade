extends ../_banner-medium-simple.jade

block vars
  - ciCode = "96168";
  - classes ="co-uk";
  - ctaLink = "[@T[link:<relative path='/tlds/co-uk.aspx'><param name='ci' value='" + ciCode + "'/></relative>]@T]";


block append styles
  style.
    .banner-medium img {height:2.5em;max-width:100%;align-content:left;}
    .banner-medium.co-uk {background-color:#dedede; color: #333; }
    .banner-medium.co-uk.simple:hover, .banner-medium.co-uk.simple:focus { color: #333; }
    .banner-medium.co-uk .text-purchase{font-size: 1.25em;}
block content
  img(src!="data:image/png;base64,")
  .black.text-primary [@T[productcompare:<percent primaryproductid="57465" secondaryproductid="57465" showsymbol="true"/>]@T] OFF 100% BRILLIANT
  .black [@L[cds.tmsv2/content/homepage/marquee-tile-tld:price]@L]
  .cta.btn.btn-sm.btn-primary Find yours
  script.
    (function() { 
      var $price = $('.!{classes}.banner-medium .text-purchase');
      var savings = '[@T[productcompare:<percent primaryproductid="57465" secondaryproductid="57465" showsymbol="true" hidebelow="5"/>]@T]';
      var $element = $('.banner-medium.co-uk .text-primary');
      if ($price.length) {
        $price.html($price.html().replace('{0}','[@T[productprice:<current productid="57465" period="yearly" />]@T]'));
        $price.show();
      }
      if (!savings) {
        $element.html('100% BRILLIANT');
      }
    })();