block styles
  style
    :less
      .hero-simple { min-height: inherit; max-height: inherit; height: 100%; width: 100%; min-width: inherit; max-width: inherit; color: #333; 
        .font-lg { font-size: 2.25em; }
        .font-md { font-size: 1.5em; }
        .font-sm { font-size: 1.25em; }

        .black { font-family: 'Walsheim-Black', 'Arial Black', sans-serif; text-transform: uppercase; }
        .bold { font-family: 'Walsheim-Bold', 'Arial Black', sans-serif; text-transform: uppercase; }

        .content-container {display:table; min-height: inherit; max-height: inherit; height: 100%; width: 90%; min-width: inherit; max-width: inherit;}
        .flag-wrapper{display:table-header-group;}
        .flag { margin-left:-2em; display:inline-block;top:0; font-size:1.25em;padding: 6px 40px 10px 40px;background:no-repeat url(data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZlcnNpb249IjEiIHZpZXdCb3g9IjAgMCAzOTAgNTAiIHByZXNlcnZlQXNwZWN0UmF0aW89Im5vbmUiPjxwYXRoIGQ9Ik0zOTAgMEwzNjAgNDUgMTUgNTAgMCAwIDM5MCAweiIgZmlsbD0iI0ZFREM0NSIvPjwvc3ZnPg==);background-size:100% 100%}
        .content {display:table-cell;vertical-align:middle;}
        .content > * { margin-top: .25em; margin-bottom: .25em; line-height: 1;}
        .content > *:first-child {margin-top:0 }
        .content > *:last-child { margin-bottom: 0;}
        span.text-purchase { font-size: 1.25em; }
        .disclaimer { color: #333; font-size: 10px; margin-top:2em}
      }
      .Explorer8 .hero-simple .flag-wrapper{
        .flag{background-image: url([@T[link:<imageroot />]@T]fos/hp/rebrand/img/yellow-flag.png);}
      }


.hero.hero-simple(data-url!=ctaLink, data-ci=ciCode, class = classes)
  .content-container
    block flag
      if flagText
        .flag-wrapper
          .flag
            .flag-content.bold !{flagText}
    .content
      block content
        .font-lg.text-primary-o.black !{headlineText}
        .font-md.black !{subHeadlineText}
        a.btn.btn-md.btn-purchase(href!=ctaLink) !{ctaText}
        .disclaimer !{disclaimerText}

block script