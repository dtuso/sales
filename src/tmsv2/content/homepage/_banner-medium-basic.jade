block vars
  - titleText = ''
  - bodyText = ''
  - ctaText = ''
  - ctaLink = ''
  - ciCode = ''
  - classes = ''

block style
  style.
    .banner-medium { min-height: inherit;max-height: inherit;min-width: inherit;max-width: inherit;height: 100%;width: 100%;padding: .5em; }
    .banner-medium.basic { background: #fff; font-size: 1em; line-height: 1; }
    .banner-medium.basic .title { font-family: 'Walsheim-Black', 'Arial Black', sans-serif; margin-bottom: 0; margin-top: 0;text-transform: uppercase;font-size:1.25em; }
    .banner-medium.basic .body { font-family: 'Walsheim-Bold', 'Arial Black', sans-serif; text-transform: uppercase; margin: .5em 0 42px 0; }
    .banner-medium.basic .btn-purchase { position: absolute; bottom: .5em; }

.banner-medium.basic(class!=classes data-url!=ctaLink data-ci=ciCode)
  block content
    .title.text-primary-o !{titleText} 
    .body !{bodyText}
    a.btn.btn-sm.btn-purchase(href!=ctaLink) !{ctaText}
