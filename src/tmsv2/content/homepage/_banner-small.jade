block vars
  - dataCi              = "";
  - containerClass      = "";
  - logoImage           = "";
  - logoImageFallback   = "";
  - titleText           = "";
  - bodyText            = "";
  - ctaText             = "";
  - ctaLink             = "";

block bannerSmallStyles
  style
    :less
      .banner-small{
        min-height: inherit;
        max-height: inherit;
        min-width: inherit;
        max-width: inherit;
        width:100%;
        height:100%;
        background-color: #fff;
        padding:5px;
        text-transform:uppercase;
        img {
          float: left;
          height: 2em;
          max-width:100%;
          padding-right:10px;
        }
        .title {
          height: 2em;
          font-size:24px;
          letter-spacing:-1px;
          font-family:'Walsheim-Black', 'Arial Black', sans-serif;
          line-height:.9;
          span {
            display:table;
            height:100%;
            span {
              display:table-cell;
              vertical-align:middle;
            }
          }
        }
        .body {
          font-family:'Walsheim-Bold', 'Arial Black', sans-serif;
          margin:.5em 0 2.5em 0;
          line-height:1.2;
        }
        a {
          color: #ef6c0f;
          font-family:'Walsheim-Bold', 'Arial Black', sans-serif;
          position:absolute;
          bottom:5px;
        }
      }
      @media only screen and (max-width:550px){
        .banner-small .title img{display:none;}
        .banner-small .title img[alt=""]{display:block;}
      }
      @media only screen and (min-width:992px) and (max-width:1199px){
        .banner-small .title img{display:none;}
        .banner-small .title img[alt=""]{display:block;}
      }

.banner-small(data-url!=ctaLink data-ci=dataCi class=containerClass)
  block logo
    .title.text-primary-o
      <!--[if lt IE 9]>
      img(src!=logoImageFallback alt!=titleText)
      <![endif]-->
      img.svgfallback(src!=logoImage alt!=titleText)
      if (titleText)
        span
          span !{titleText}
  block body
    .body !{bodyText}
  block cta
    a(href!=ctaLink) !{ctaText} 
  block scripts