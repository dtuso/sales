extends ../../../../sales/homepage/_tile.jade

block append vars
  - ctaLink = "[@T[link:<relative path='getonline/getonline.aspx'><param name='ci' value='95742' /><param name='p4p' value='confusing' /></relative>]@T]";
  - dataCi = 95742;
  - containerClass = "marquee-tile p4p";

block append tileStyles
  style
    :less
      .marquee-tile.p4p{background-color:#77c043;background-repeat:no-repeat;background-position:5% 100%;background-size:120px 110px;background-image:url(data:image/svg+xml;base64,);
        .tile-content-wrapper{padding:3% 11% 0 44%; line-height:1.3}
        @media only screen and (min-width: 992px) and (max-width: 1199px){
        .tile-content-wrapper{padding-right:1%}
        }
        .headline{background-color:#fdda54; padding-left:2%; margin-left:-2%;}
        button{margin:5% 0;}
      }
      .Explorer8 .marquee-tile-p4p,.Explorer7 .marquee-tile-p4p{background-image: url([@T[link:<imageroot />]@T]fos/hp/rebrand/img/p4p-man.png);}

block tileContent
  .headline.walsheim-black [@L[cds.tmsv2/content/homepage/p4p:headline]@L]
  .sub-headline.walsheim-black [@L[cds.tmsv2/content/homepage/p4p:sub-headline]@L]
  button.btn.btn-purchase.btn-sm [@L[cds.tmsv2/content/homepage/p4p:cta]@L]