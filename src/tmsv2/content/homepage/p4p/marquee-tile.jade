extends ../../../../sales/homepage/_tile.jade

block append vars
  - ctaLink = "[@T[link:<relative path='p4p/questions-config'><param name='ci' value='95742' /><param name='p4p' value='confusing' /></relative>]@T]";
  - dataCi = 95742;
  - containerClass = "marquee-tile-p4p";

block append tileStyles
  link(href="[@T[link:<css path='ux/test-brand/css/uxcontrols.min.css' namemode='explicit'/>]@T]" rel="stylesheet" media="screen")
  style
    :less
      #p4p-list{border-top-width:3px;border-bottom-width:1px;width:80%;text-align:left;text-transform:none;font-size:18px;padding-top:0;padding-bottom:0;color:#333;background-color:#fdda54;border-color:#fcc335}
      #p4p-list .caret{float:right;margin-top:4px;}
      .marquee-tile-p4p{background-color:#77c043;background-repeat:no-repeat;background-position:95% 100%;background-size:120px 110px;background-image:url(data:image/svg+xml;base64,)}
      .marquee-tile-p4p .tile-content-wrapper{padding:20px 10px;}
      .marquee-tile-p4p .header-text{font-size:18px;color:#333;text-transform:uppercase;line-height:20px;margin-bottom:10px;}
      .marquee-tile-p4p .dropdown-menu{width:80%;border:none;background-color:#fdda54;}
      .marquee-tile-p4p .dropdown-menu>li>a{padding:5px 10px;}
      .marquee-tile-p4p .dropdown-menu>li>a:hover,.marquee-tile-p4p .dropdown-menu>li>a:focus{background-color:#fcc335;color:#333;}
      .marquee-tile-p4p a.cta-link{display:block;font-size:16px;color:#fff;text-transform:uppercase;font-family:'Walsheim-Black', 'Arial Black', sans-serif;margin-top:10px;}
      .Explorer8 .marquee-tile-p4p,.Explorer7 .marquee-tile-p4p{background-image: url([@T[link:<imageroot />]@T]fos/hp/rebrand/img/p4p-man.png);}

block tileContent
  .container
    .row
      .col-sm-9
        .left-content-wrapper
          .header-text.walsheim-black [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-header-text]@L]
          .dropdown
            button#p4p-list.dropdown-toggle.btn.btn-xs.walsheim-black(rule="button" data-toggle="dropdown" href="#") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-confusing]@L]
              b.caret
            ul.dropdown-menu.walsheim-black(role="menu" aria-labelledby="p4p-list")
              li(role="presentation") 
                a(data-ci="95743" role="menuitem" tabindex="-1" href!="[@T[link:<relative path='p4p/questions-config'><param name='ci' value='95743' /><param name='p4p' value='intimidating' /></relative>]@T]") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-intimidating]@L]
              li(role="presentation") 
                a(data-ci="95744" role="menuitem" tabindex="-1" href!="[@T[link:<relative path='p4p/questions-config'><param name='ci' value='95744' /><param name='p4p' value='confusing' /></relative>]@T]") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-confusing]@L]
              li(role="presentation") 
                a(data-ci="95745" role="menuitem" tabindex="-1" href!="[@T[link:<relative path='p4p/questions-config'><param name='ci' value='95745' /><param name='p4p' value='annoying' /></relative>]@T]") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-annoying]@L]
              li(role="presentation") 
                a(data-ci="95746" role="menuitem" tabindex="-1" href!="[@T[link:<relative path='p4p/questions-config'><param name='ci' value='95746' /><param name='p4p' value='#&!$*%!' /></relative>]@T]") [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-frustration]@L]
          a.cta-link.walsheim-black(href=ctaLink) [@L[cds.sales/homepage/tile/marquee-tile-p4p:marquee-tile-p4p-cta-text]@L]
      .col-sm-3
      atlantis:webstash(type="js")
        script(src="[@T[link:<js path='ux/test-brand/js/uxcontrols.min.js' namemode='explicit'/>]@T]")
        script.
          $(document).ready(function(){$('#p4p-list').dropdown();});