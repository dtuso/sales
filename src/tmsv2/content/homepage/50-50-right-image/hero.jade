extends ../_hero-arrow.jade

append vars
  - var classes = "fifty-right-image"
  - var dataCI = 97703;
  - var ctaLink = "[@T[link:<relative path='business/email-marketing-software'><param name='ci' value='"+dataCI+"' /></relative>]@T]";
  - var rightImage = "[@T[link:<imageroot/>]@T]/fos/hp/rebrand/img/woman.jpg";
  - var xsRightImage = "[@T[link:<imageroot/>]@T]/fos/hp/rebrand/img/woman.jpg";
  - var polygon = "grey-bottom";
  - var xsBannerColor = "#DEDEDE";
  - var logoImage = "data:image/svg+xml;base64,";
  - var logoImageFallback = "[@T[link:<imageroot />]@T]fos/tmsv2/content/o365-biz-email/banner-small/pro-email-icon.png";
  - var titleText ="Template title icon";

append styles
  style
    :less
      #marquee{
        .left-content{
            @media only screen 
              and (max-width: 325px) {
                .product { font-size: 1em !important;}
                .big-green { font-size: 1.25em !important;}
                .btn-md{font-size: 14px; padding:5px 15px 2px; border-bottom-width:3px; }
                .description{font-size: 12px;}
            }
            @media only screen 
              and (min-width:326px)
              and (max-width: 575px) {
                .product { font-size: 1.25em !important;}
                .big-green { font-size: 1.5em !important;}
                .btn-md{font-size: 14px; padding:5px 15px 2px; border-bottom-width:3px; }
            }
            @media only screen
              and (min-width:575px)
              and (max-width: 768px) {
                img{display:initial !important;}
            }
            @media only screen
              and (min-width:900px)
              and (max-width: 1200px) {
                padding: 10% 0% 5% 0;
            }
          }
        .right-container{background:url(!{rightImage}) top center;}
      }

block leftContent
  <!--[if lt IE 9]>
  img.hidden-xs(src!=logoImageFallback alt!=titleText)
  <![endif]-->
  img.svgfallback.hidden-xs(src!=logoImage alt!=titleText)
  div.hidden-xs
    mark.font-sm.bold [@L[cds.tmsv2/content/homepage/gem/hero:markText]@L]
  p.product GODADDY PRODUCT
  h2.big-green LOREM IPSUM DOLOR SIT AMET
  div.description Ut enim ad minim veniam quis nostrud ecercitation ullamco.
  p.price Starting at <span>[@T[productprice:<current productid="566281" period="monthly" checktmspromocode="true" htmlsymbol="false" />]@T]/mo</span>
  a.btn.btn-md.btn-primary [@L[cds.tmsv2/content/homepage/gem/hero:ctaText]@L]
  p.disclaimer Disclaimer text is smaller and will take up this area
block rightContent