atlantis:webstash(type='js')
  script.
    $(document).ready(function(){
      $("#txtsld").val('')
      .bind('focus',function(){
        if(this.value==''){
          $('#txtsldlabel').css({'opacity':0});
        }
      }).bind('blur',function(){
        if(this.value==''){
          $('#txtsldlabel').css({'opacity':1});
        }
      });
    });




