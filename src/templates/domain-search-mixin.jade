mixin domainSearchInput(params)
  - var params                = params || {};
  - var actionUrl             = params.actionUrl || "[@T[link:<external linktype='siteurl' path='' parammode='explicit'/>]@T]/api/dpp/search/single?ci=54814&isc=gd41166r";
  - var icode                 = params.icode || "home:Domain Search:Domains:Domain Search";
  - var tcode                 = params.tcode || "home:Domain Search:Domains:Domain Search:Search Domain";
  - var placeholderTextColor  = params.placeholderTextColor || "text-primary";
  - var buttonColor           = params.buttonColor || "btn-primary";
  - var buttonText            = params.buttonText || "[@L[cds.sales/homepage/locales/en:domain-search-btn]@L]";
  - var placeholderText       = params.placeholderText || "[@L[cds.sales/homepage/segments/default:domain-banner-search-text]@L]";
  .row
    .col-xs-12.search-template
      form(action!="#{actionUrl}", data-icode!="#{icode}", data-domainsearch!="{'search-element':'input.searchInput','placeholder-element':'label.searchInput','button':'button','empty-redirect':'[@T[link:<external linktype='siteurl' path='' parammode='explicit'/>]@T]/domains/domain-name-search.aspx'}")
        .search-template-box.clearfix
          input(class!="#{placeholderTextColor} searchInput" type="text" autocomplete="off" name="domainToCheck" maxlength="63" placeholder=placeholderText)
          button(type="submit" data-tcode!="#{tcode}" class!="#{buttonColor} btn btn-lg pull-right ") !{buttonText}


mixin domainSearchOffersInput(title, cicode, placeholderText, buttonText, infoTypeHere, infoErrorEligibility, infoInvalidTld)
  style.
    .offer-search-box .search-form-input {height: 67px; padding: 20px; color: #333; font-size:18px;border-top-color: #fff; border-top-width: 3px; border-top-style: inset; border-bottom: 1px solid #ccc; border-left: 1px solid #ccc; border-right: 1px solid #ccc; width: 850px;}
    .offer-search-box label.searchInput {};
    .offer-search-box button.offer-search-btn { font-size: 20px; height: 66px; margin-top: -6px; }
    .offer-search-box { padding-bottom:20px;}
    .search-message { display: none; margin-left:20px; margin-top:30px;width:65%;}
    .domain-search-messaging-row {padding-bottom: 40px;}

  .row
    .col-md-12
      if(title)
        h5.get-a-domain-text !{title}
  .row
    .col-md-12.offer-search-box
      input.search-form-input.searchInput.helveticafont(type="text" placeholder!="#{placeholderText}" name="domainToCheck" autocomplete="off" maxlength="63")
      button.btn.btn-primary.btn-lg.offer-search-btn(type="button" name="searchButton" data-ci="#{cicode}") !{buttonText}
  .row.domain-search-messaging-row
    .col-md-12
      span.search-message.speech-shape-upsidedown.speech-shape-upsidedown-yellow.type-your-business-name !{infoTypeHere}
      span.search-message.speech-shape-upsidedown.speech-shape-upsidedown-orange.domain-eligibility-fail !{infoErrorEligibility}
      span.search-message.speech-shape-upsidedown.speech-shape-upsidedown-orange.invalid-TLD-entered !{infoInvalidTld}

