//- here are the fields that can be set on inheriting classes
- title = title || "";
- subTitle = subTitle || "";
- description = description || "";
- features = features || [];
- pfid = pfid || "";
- flagText = flagText || "";
- tcode = tcode || "";
- buttonText = buttonText || "Add to Cart";
- buttonUrl = buttonUrl || "";

block vars

atlantis:webstash(type="css")
  block styles
    style.
      .pro-plans { margin-top: 0; }

.pro-plan-wrap
  block flag
    if (flagText)
      div.plan-flag !{flagText}

  block title
    if (title)
      h2.plan-title !{title}

  block subTitle
    if (subTitle)
      h5.plan-subtitle !{subTitle}

  block description
    if (description)
      p.plan-text !{description}

  block price
    if (pfid)
      .plan-price-wrap 
        strong Starting at
          br
          span.plan-price.text-warning [@T[productprice:<current productid="!{pfid}" dropdecimal="false" period="monthly" htmlsymbol="false" negative="parentheses" />]@T]
          span.plan-duration.text-warning /mo
          | 
          |##if(productHasSavingsMoreThan(!{pfid}, !{pfid}, 0))
          | 
          br
          strong
            | was 
            strike [@T[productprice:<list productid="!{pfid}" dropdecimal="false" period="monthly" htmlsymbol="false" negative="parentheses" />]@T]
            |  
            span.text-primary Save [@T[productcompare:<percent primaryproductid="!{pfid}" secondaryproductid="32051" showsymbol="true" hidebelow="5"><html><![CDATA[{0}]]></html></percent>]@T]
          | 
          |##endif
          | 
  //- block disclaimers
  //-   if (plan.planDisclaimers)
  //-    .plan-disclaimers !{plan.planDisclaimers}

  block selectList
    div.sf-droplist-select.form-control
      div.sf-droplist-selectcontent
        div
          span.sf-droplist-term 12 mo
          span.sf-droplist-cost.sf-droplist-sale $X.XX/mo
          span.sf-droplist-msg.sf-droplist-sale ON SALE
      div.sf-droplist-selectbtn
        span.sf-droplist-anchor
    ul#basic-plan-list(style='display:none;')
      li(data-value='1')
        .sf-droplist-row(data-main='true')
          span.sf-droplist-term 3 mo
          span.sf-droplist-cost.sf-droplist-sale $X.XX/mo
          span.sf-droplist-msg.sf-droplist-sale ON SALE
        .sf-droplist-row
          span.sf-droplist-term  
          span.sf-droplist-cost
            strike $X.XX/mo
          span.sf-droplist-msg.sf-droplist-sale Save XX%
      li(data-selected='true', data-value='2')
        .sf-droplist-row(data-main='true')
          span.sf-droplist-term 12 mo
          span.sf-droplist-cost.sf-droplist-sale $X.XX/mo
          span.sf-droplist-msg.sf-droplist-sale ON SALE
        .sf-droplist-row
          span.sf-droplist-term  
          span.sf-droplist-cost
            strike $X.XX/mo
          span.sf-droplist-msg.sf-droplist-sale Save XX%
      li(data-value='3')
        .sf-droplist-row(data-main='true')
          span.sf-droplist-term 24 mo
          span.sf-droplist-cost.sf-droplist-sale $X.XX/mo
          span.sf-droplist-msg.sf-droplist-sale ON SALE
        .sf-droplist-row
          span.sf-droplist-term  
          span.sf-droplist-cost
            strike $X.XX/mo
          span.sf-droplist-msg.sf-droplist-sale Save XX%

    script.
      $("#basic-plan-list").sfDropList({});


  block button
    if (buttonText)
      a.btn.btn-primary.btn-plan.btn-lg.btn-block(href!=buttonUrl data-tcode!=tcode data-index="1") !{buttonText}

  block features
    //- Feature list
    each feature, index in features
      //- Text at the bottom that can have multiple "rows"
      if (index < 3)
        .plan-item 
          strong !{feature}
      else
        .plan-item !{feature}
